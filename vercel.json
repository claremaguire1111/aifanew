{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "devCommand": "npm run dev",
  "cleanUrls": true,
  "public": true,
  "trailingSlash": false,
  "images": {
    "sizes": [256, 640, 1200, 1920],
    "domains": ["aifilmacademy.io", "www.aifilmacademy.io"],
    "remotePatterns": [
      {
        "protocol": "https",
        "hostname": "**"
      }
    ]
  },
  "functions": {
    "app/api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    },
    {
      "source": "/images/social/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/images/support/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/dulwich/create", "destination": "/api/dulwich/create" },
    { "source": "/api/dulwich/status", "destination": "/api/dulwich/status" },
    { "source": "/api/generate-animation", "destination": "/api/generate-animation" },
    { "source": "/api/runway-wrapper", "destination": "/api/runway-wrapper" },
    { "source": "/api/runway-direct/create", "destination": "/api/runway-direct/create" }
  ],
  "routes": [
    { "src": "/api/dulwich/create", "methods": ["POST", "OPTIONS"], "dest": "/api/dulwich/create" },
    { "src": "/api/dulwich/status", "methods": ["GET", "OPTIONS"], "dest": "/api/dulwich/status" },
    { "src": "/api/generate-animation", "methods": ["POST", "OPTIONS"], "dest": "/api/generate-animation" },
    { "src": "/api/runway-wrapper", "methods": ["POST", "OPTIONS"], "dest": "/api/runway-wrapper" },
    { "src": "/api/runway-direct/create", "methods": ["POST", "OPTIONS"], "dest": "/api/runway-direct/create" }
  ]
}